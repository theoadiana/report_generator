{
    "name": "theob/report-generator",
    "description": "A PHP library for generating reports in Excel, PDF, and HTML formats",
    "type": "library",
    "license": "MIT",
    "keywords": ["report", "excel", "pdf", "export", "phpspreadsheet", "dompdf"],
    "autoload": {
        "psr-4": {
            "Theob\\ReportGenerator\\": "src/"
        },
        "files": [
            "src/Utility.php"
        ]
    },
    "authors": [
        {
            "name": "Theo Adiana",
            "email": "theobenitoadiana@gmail.com",
            "homepage": "https://github.com/theoadiana",
            "role": "Developer"
        }
    ],
    "scripts": {
        "post-install-cmd": [
            "php scripts/make-config.php",
            "php scripts/make-example.php"
        ],
        "post-update-cmd": [
            "php scripts/make-config.php",
            "php scripts/make-example.php"
        ]
    },
    "require": {
        "php": "^7.4|^8.0",
        "phpoffice/phpspreadsheet": "^2.1",
        "dompdf/dompdf": "^3.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "suggest": {
        "ext-zip": "For Excel file operations",
        "ext-gd": "For image processing in PDFs",
        "ext-mbstring": "For better string handling"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "simplycodedsoftware/composer-require-checker": false
        }
    }
}